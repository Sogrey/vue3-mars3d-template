{
  "extends": "@vue/tsconfig",
  "include": ["env.d.ts", "src/**/*", "src/**/*.ts", "src/**/*.tsx", "src/**/*.vue", "src/**/*.d.ts"],
  "exclude": [
    "src/**/__tests__/*", 
    "eslint.config.js",
    "vite.config.ts",
    "*.config.*"
  ],
  "compilerOptions": {
    "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.app.tsbuildinfo",
    "paths": {
      "@/*": ["./src/*"]
    },
    "skipLibCheck": true,
    "typeRoots": ["./node_modules/@types", "./src/types", "./src"],
    "types": ["vite/client", "node"]
  }
}
