{
  "extends": "@vue/tsconfig",
  "include": ["env.d.ts", "src/**/*.ts", "src/**/*.tsx", "src/**/*.vue"],
  "exclude": [
    "src/**/__tests__/*", 
    "eslint.config.js",
    "vite.config.ts",
    "*.config.*"
  ],
  "compilerOptions": {
    "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.app.tsbuildinfo",
    "paths": {
      "@/*": ["./src/*"]
    },
    "skipLibCheck": true
  }
}
